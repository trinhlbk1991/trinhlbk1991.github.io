---
import PostPage from '../../../components/pages/PostPage.astro';
import { getPostsByLang, parsePostId } from '../../../utils/content';

export const prerender = true;

export async function getStaticPaths() {
  const blogEntries = await getPostsByLang('vi');
  
  return blogEntries.map((entry) => {
    const { category, slug } = parsePostId(entry.id);
    
    return {
      params: { category, slug },
      props: { entry },
    };
  });
}

const { entry } = Astro.props;
---

<PostPage entry={entry} lang="vi" />
