---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import { SITE } from '../config';

const posts = await getCollection('blog');

// Extract and count tags
const tagData = {};
posts.forEach(post => {
  if (post.data.tags && post.data.tags.length > 0) {
    post.data.tags.forEach(tag => {
      if (!tagData[tag]) {
        tagData[tag] = {
          count: 0,
          posts: []
        };
      }
      tagData[tag].count++;
      tagData[tag].posts.push(post);
    });
  }
});

const tags = Object.keys(tagData).sort();
const totalPosts = posts.length;
const totalTags = tags.length;

// Calculate tag popularity for sizing
const maxCount = Math.max(...Object.values(tagData).map(tag => tag.count));
const minCount = Math.min(...Object.values(tagData).map(tag => tag.count));

function getTagSize(count) {
  if (maxCount === minCount) return 'text-base';
  const ratio = (count - minCount) / (maxCount - minCount);
  if (ratio >= 0.75) return 'text-xl font-bold';
  if (ratio >= 0.5) return 'text-lg font-semibold';
  if (ratio >= 0.25) return 'text-base font-medium';
  return 'text-sm';
}

function getTagColor(count) {
  if (maxCount === minCount) return 'bg-blue-100 text-blue-800 border-blue-200';
  const ratio = (count - minCount) / (maxCount - minCount);
  if (ratio >= 0.75) return 'bg-blue-600 text-white border-blue-600';
  if (ratio >= 0.5) return 'bg-blue-500 text-white border-blue-500';
  if (ratio >= 0.25) return 'bg-blue-200 text-blue-900 border-blue-300';
  return 'bg-gray-100 text-gray-700 border-gray-200';
}
---

<BaseLayout 
  title={`Tags | ${SITE.title}`}
  description="Explore blog posts by tags and topics"
>
  <div class="max-w-5xl mx-auto px-6 py-12">
    <header class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Tags</h1>
      <p class="text-lg text-gray-600">
        Discover content through {totalTags} tags across {totalPosts} posts
      </p>
      <div class="w-24 h-1 bg-blue-600 mx-auto mt-6"></div>
    </header>

    {tags.length > 0 ? (
      <div class="space-y-8">
        <!-- Tag Cloud -->
        <section>
          <h2 class="text-2xl font-bold text-gray-900 mb-6">Tag Cloud</h2>
          <div class="flex flex-wrap gap-3 justify-center">
            {tags.map(tag => {
              const data = tagData[tag];
              return (
                <button 
                  class={`tag-pill inline-flex items-center gap-2 px-4 py-2 rounded-full border transition-all hover:shadow-md ${getTagColor(data.count)} ${getTagSize(data.count)}`}
                  data-tag={tag}
                >
                  <span>#{tag}</span>
                  <span class="text-xs opacity-75">
                    {data.count}
                  </span>
                </button>
              );
            })}
          </div>
        </section>

        <!-- Tag List -->
        <section>
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-2xl font-bold text-gray-900">All Tags</h2>
            <div class="text-sm text-gray-500">
              Click a tag to view posts
            </div>
          </div>
          
          <div class="grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
            {tags.map(tag => {
              const data = tagData[tag];
              return (
                <div class="tag-card bg-white border border-gray-200 rounded-lg p-4 hover:shadow-md hover:border-blue-300 transition-all cursor-pointer" data-tag={tag}>
                  <div class="flex items-center justify-between mb-2">
                    <h3 class="text-lg font-semibold text-gray-900">#{tag}</h3>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
                      {data.count} {data.count === 1 ? 'post' : 'posts'}
                    </span>
                  </div>
                  <div class="text-sm text-gray-600">
                    Latest: {data.posts.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())[0].data.title}
                  </div>
                </div>
              );
            })}
          </div>
        </section>

        <!-- Tag Details Modal/Section -->
        <section id="tag-details" class="hidden">
          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <div class="flex items-center justify-between mb-6">
              <h2 class="text-2xl font-bold text-gray-900">
                Posts tagged with <span id="selected-tag" class="text-blue-600"></span>
              </h2>
              <button id="close-tag-details" class="text-gray-500 hover:text-gray-700 transition-colors">
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
            
            <div id="tag-posts" class="space-y-4">
              <!-- Posts will be inserted here by JavaScript -->
            </div>
          </div>
        </section>
      </div>
    ) : (
      <div class="text-center py-12">
        <div class="text-gray-400 mb-4">
          <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
          </svg>
        </div>
        <h3 class="text-lg font-medium text-gray-900 mb-2">No tags found</h3>
        <p class="text-gray-500">Posts with tags will appear here.</p>
      </div>
    )}
  </div>

  <script define:vars={{ tagData }}>
    document.addEventListener('DOMContentLoaded', function() {
      const tagPills = document.querySelectorAll('.tag-pill');
      const tagCards = document.querySelectorAll('.tag-card');
      const tagDetails = document.getElementById('tag-details');
      const selectedTagElement = document.getElementById('selected-tag');
      const tagPostsContainer = document.getElementById('tag-posts');
      const closeButton = document.getElementById('close-tag-details');
      
      function showTagDetails(tag) {
        const data = tagData[tag];
        if (!data) return;
        
        selectedTagElement.textContent = `#${tag}`;
        
        // Clear previous posts
        tagPostsContainer.innerHTML = '';
        
        // Sort posts by date (newest first)
        const sortedPosts = data.posts.sort((a, b) => new Date(b.data.date) - new Date(a.data.date));
        
        // Create post elements
        sortedPosts.forEach(post => {
          const postElement = document.createElement('article');
          postElement.className = 'bg-white rounded-lg border border-gray-200 p-4 hover:shadow-md transition-shadow';
          
          const category = post.id.split('/')[0];
          const filename = post.id.split('/')[1];
          const slug = filename.replace(/^\d{4}-\d{2}-\d{2}-/, '').replace(/\.md$/, '');
          const postUrl = `/${category}/${slug}/`;
          
          const dateStr = new Date(post.data.date).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'short', 
            day: 'numeric'
          });
          
          postElement.innerHTML = `
            <div class="flex items-start justify-between gap-4 mb-2">
              <a href="${postUrl}" class="text-lg font-semibold text-gray-900 hover:text-blue-600 transition-colors">
                ${post.data.title}
              </a>
              <time class="text-sm text-gray-500 shrink-0">${dateStr}</time>
            </div>
            ${post.data.description ? `
              <p class="text-gray-600 text-sm mb-3">${post.data.description}</p>
            ` : ''}
            <div class="flex items-center gap-2">
              ${post.data.categories && post.data.categories.length > 0 ? `
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-800">
                  ${post.data.categories[0]}
                </span>
              ` : ''}
              ${post.data.tags ? post.data.tags.slice(0, 3).map(t => 
                `<span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 text-gray-700">#${t}</span>`
              ).join('') : ''}
              ${post.data.tags && post.data.tags.length > 3 ? `
                <span class="text-xs text-gray-500">+${post.data.tags.length - 3} more</span>
              ` : ''}
            </div>
          `;
          
          tagPostsContainer.appendChild(postElement);
        });
        
        tagDetails.classList.remove('hidden');
        tagDetails.scrollIntoView({ behavior: 'smooth', block: 'start' });
      }
      
      function hideTagDetails() {
        tagDetails.classList.add('hidden');
      }
      
      // Add click handlers
      [...tagPills, ...tagCards].forEach(element => {
        element.addEventListener('click', function() {
          const tag = this.getAttribute('data-tag');
          showTagDetails(tag);
        });
      });
      
      closeButton.addEventListener('click', hideTagDetails);
      
      // Close on escape key
      document.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          hideTagDetails();
        }
      });
    });
  </script>
</BaseLayout>