---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog');
const postsWithImages = posts.filter(post => post.data.image);
---

<BaseLayout title="Gallery" description="A visual feast of our culinary creations">
  <div class="max-w-7xl mx-auto px-4 py-12">
    <header class="text-center mb-16">
      <span class="text-primary font-medium tracking-wider uppercase text-sm mb-4 block">Visual Feast</span>
      <h1 class="text-display-l text-content mb-6 font-serif">Culinary Gallery</h1>
      <p class="text-body-l text-content-muted max-w-2xl mx-auto">
        Explore our recipes through the lens. A collection of textures, colors, and flavors.
      </p>
    </header>

    <div class="columns-1 md:columns-2 lg:columns-3 gap-8 space-y-8">
      {postsWithImages.map((post) => (
        <a href={`/blog/${post.slug}`} class="block group break-inside-avoid">
          <div class="relative overflow-hidden rounded-lg bg-stone-200">
            <img 
              src={post.data.image} 
              alt={post.data.imageAlt || post.data.title}
              class="w-full h-auto object-cover transition-transform duration-700 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors duration-300 flex items-end p-6">
              <div class="opacity-0 group-hover:opacity-100 transition-opacity duration-300 transform translate-y-4 group-hover:translate-y-0">
                <span class="text-white text-sm font-medium uppercase tracking-wider mb-1 block">{post.data.category}</span>
                <h3 class="text-white text-xl font-serif">{post.data.title}</h3>
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</BaseLayout>
