# Security Headers for all pages
/*
  # Security
  X-Frame-Options: DENY
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: interest-cohort=()
  
  # Content Security Policy
  Content-Security-Policy: default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://*.disqus.com https://*.disquscdn.com https://giscus.app https://static.cloudflareinsights.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com https://*.disquscdn.com https://giscus.app; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: http:; connect-src 'self' https://www.google-analytics.com https://*.disqus.com https://api.countapi.xyz https://cloudflareinsights.com; frame-src https://*.disqus.com https://giscus.app; worker-src 'self' blob:;

# Cache static assets
/assets/*
  Cache-Control: public, max-age=31536000, immutable

# Cache images
/images/*
  Cache-Control: public, max-age=31536000, immutable

# Cache fonts
/*.woff2
  Cache-Control: public, max-age=31536000, immutable
/*.woff
  Cache-Control: public, max-age=31536000, immutable

# Don't cache HTML pages
/*.html
  Cache-Control: public, max-age=0, must-revalidate

# Cache RSS and Sitemap with shorter duration
/rss.xml
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: application/xml

/sitemap.xml
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: application/xml

# Cache JSON files
/*.json
  Cache-Control: public, max-age=3600, must-revalidate
  Content-Type: application/json
